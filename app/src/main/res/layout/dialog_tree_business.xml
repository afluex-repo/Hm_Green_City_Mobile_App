                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textAppearance="@style/TextFieldBold"
                        android:textColor="@color/textcolor"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/totalmembers_left" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/constrThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/constrFour"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="0.25"
                    app:layout_constraintStart_toEndOf="@+id/constrTwo"
                    app:layout_constraintTop_toBottomOf="@+id/tv_join_on">

                    <TextView
                        android:id="@+id/tvRight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgrey"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="4dp"
                        android:text="Right"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextFieldBold"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/active_right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside" />

                    <TextView
